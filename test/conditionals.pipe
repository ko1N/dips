---
name: conditionals

parameters:
  - binary_first
  - binary_second

stages:
- stage: testing conditional execution
  tasks:

  - name: try execute /usr/bin/foo
    service: shell
    input: /usr/bin/foo
    register: foo_result
    ignore_errors: "true"

  - service: shell
    input: "echo {{ foo_result.rc }}"

  - service: shell
    input: /usr/bin/bar
    when: foo_result.rc == 5

  - service: shell
    input: /usr/bin/bar
    when: foo_result.rc != 0
